<!DOCTYPE html>
<html lang="en">
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/table.css">
</head>
<body>
  <%- include("./partials/error"); %>
<!--====form section start====-->
    <div class="table-data">
    <table border="1" >
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        
        <%
        if(Booking.length!=0){
        var i=1;
        Booking.forEach(function(data){
        %>
        <tr>
            <td><%=data.email %></td>
            <td><%=data.firstName %></td>
            <td><%=data.lastName %></td>
            <td><%=data.date.toDateString() %></td>
            <td><%=data.time %></td>
            <% if((data.date - new Date()) > (60 * 60 * 24 * 1000)){
              %>
            <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/users/delete/<%=data.id%>">Delete</a></td>
             <% }%>
             <% if((data.date - new Date()) < (60 * 60 * 24 * 1000)){
              %>
            <td><a>Can't Edit Booking one day prior</a></td>
            <td><a>Can't Delete Booking One day prior</a></td>
             <% }%>
             
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    <a href="/users/dashboard" class="btn btn-secondary">Return to Dashboard</a>
    </div>
   
</body>



</html>